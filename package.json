{
  "name": "video-topic-review-system",
  "version": "1.0.0",
  "description": "A workflow app to collect video links, assign relevance scores, and track topics through review stages",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint public/**/*.js server.js query-builder.js schema-utils.js --fix",
    "lint:check": "eslint public/**/*.js server.js query-builder.js schema-utils.js",
    "format": "prettier --write public/**/*.{js,css,html} server.js query-builder.js schema-utils.js",
    "format:check": "prettier --check public/**/*.{js,css,html} server.js query-builder.js schema-utils.js",
    "quality": "npm run lint && npm run format"
  },
  "dependencies": {
    "express": "^4.18.2",
    "@supabase/supabase-js": "^2.39.0",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "keywords": ["video", "review", "workflow", "admin"],
  "author": "",
  "license": "MIT"
}
